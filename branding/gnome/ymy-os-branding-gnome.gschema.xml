<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <!-- YmY OS GNOME Branding Şeması -->
  
  <!-- Masaüstü Arka Planı -->
  <schema id="org.gnome.desktop.background" path="/org/gnome/desktop/background/" gettext-domain="gnome-desktop">
    <key type="s" name="picture-uri-dark">
      <default>'file:///usr/share/backgrounds/ymy-os/ymy-wallpaper-dark.jpg'</default>
      <summary>Koyu mod arka planı</summary>
    </key>
    <key type="s" name="picture-uri">
      <default>'file:///usr/share/backgrounds/ymy-os/ymy-wallpaper-light.jpg'</default>
      <summary>Açık mod arka planı</summary>
    </key>
  </schema>

  <!-- Ekran Kilidi Arka Planı -->
  <schema id="org.gnome.desktop.screensaver" path="/org/gnome/desktop/screensaver/">
    <key type="s" name="picture-uri">
      <default>'file:///usr/share/backgrounds/ymy-os/ymy-lockscreen.jpg'</default>
      <summary>Ekran kilidi arka planı</summary>
    </key>
  </schema>

  <!-- YmY OS Tercihler -->
  <schema id="org.ymy.os.gnome" path="/org/ymy/os/gnome/">
    <key type="s" name="branding-name">
      <default>'YmY OS 43 Beta'</default>
      <summary>Dağıtım adı</summary>
    </key>
    <key type="s" name="logo-path-light">
      <default>'/usr/share/pixmaps/ymy-logo-light.png'</default>
      <summary>Açık mod logo yolu</summary>
    </key>
    <key type="s" name="logo-path-dark">
      <default>'/usr/share/pixmaps/ymy-logo-dark.png'</default>
      <summary>Koyu mod logo yolu</summary>
    </key>
    <key type="b" name="first-run-wizard">
      <default>true</default>
      <summary>İlk çalıştırma sihirbazını göster</summary>
    </key>
  </schema>

</schemalist>
